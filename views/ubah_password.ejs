<%- include("sidebar.ejs") %>
<!-- Card Section -->
<div class="max-w-2xl px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">
  <!-- Card -->

  <div
  class="mt-5 p-4 relative z-10 bg-white border rounded-xl sm:mt-10 md:p-10">
  <div class="text-center mb-8">
    <h2 class="text-2xl md:text-3xl font-bold text-gray-800 dark:text-neutral-200">
      Ubah Password
    </h2>
    <p class="text-sm text-gray-600 dark:text-neutral-400">
      hayoo kenapa ganti password.
    </p>
  </div>
  <form action >
    <div class="mb-4 sm:mb-8">
      <label
        for="current_password"
        class="block mb-2 text-sm font-medium"
        >Current Password</label
      >
      <input
        type="text"
        id="current_password"
        class="py-3 px-4 block w-full border border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none"
        placeholder="Current Password"
      />
    </div>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 lg:gap-6">
        <div>
          <label for="new_password" class="block mb-2 text-sm text-gray-700 font-medium dark:text-white">New Password</label>
          <input type="text" name="new_password" id="new_password" class="py-3 px-4 block w-full border border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none " placeholder="New Password">
        </div>

        <div>
          <label for="confirm_password" class="block mb-2 text-sm text-gray-700 font-medium dark:text-white">Confirm Password</label>
          <input type="text" name="confirm_password" id="confirm_password" class="py-3 px-4 block w-full border border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none " placeholder="Confirm Password">
        </div>
      </div>
      <div class="mt-5 flex justify-end gap-x-2">
        <button type="submit" class="py-2 px-3 inline-flex m-5 items-center gap-x-2 text-base font-semibold rounded-lg border border-transparent bg-blue-600 text-white hover:bg-blue-700 disabled:opacity-50 disabled:pointer-events-none">
          Ubah Password
        </button>
      </div>
  </form>
</div>
<!-- End Card -->
</div>
</div>
<!-- end form permohonan -->
<script src = "/javascripts/ubah_password.js"></script>