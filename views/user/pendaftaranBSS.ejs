    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script>
        $(document).ready(function() {
            $('form').submit(function(e) {
                e.preventDefault(); // Mencegah form untuk melakukan submit default
    
                var form = this;
                var formData = new FormData(form);
    
                $.ajax({
                    type: $(form).attr('method'),
                    url: $(form).attr('action'),
                    data: formData,
                    cache: false,
                    contentType: false,
                    processData: false,
                    success: function(response) {
                        // Menampilkan SweetAlert jika sukses
                        Swal.fire({
                            icon: 'success',
                            title: 'Sukses!',
                            text: 'Permohonan berhasil dibuat',
                            showConfirmButton: false,
                            timer: 1500
                        }).then(function() {
                            window.location.href = '/pendaftaranBss'; // Redirect setelah SweetAlert ditutup
                        });
                    },
                    error: function(xhr, status, error) {
                        // Menampilkan SweetAlert jika gagal
                        Swal.fire({
                            icon: 'error',
                            title: 'Oops...',
                            text: 'Gagal membuat permohonan',
                            showConfirmButton: false,
                            timer: 1500
                        });
                    }
                });
            });
        });
    </script>
    
