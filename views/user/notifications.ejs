        <!-- content -->
        <div class="p-8 w-11/12 mx-auto">
          <h1 class="text-3xl font-bold mb-8"><%= title %></h1>
          <div class="bg-white shadow-md rounded-lg">
            <% if (pengajuanList.length === 0) { %>
              <p class="text-gray-500 p-4">Belum ada notifikasi.</p>
            <% } else { %>
              <ul class="divide-y divide-gray-200">
                <% pengajuanList.forEach(pengajuan => { %>
                  <li class="p-4">
                    <div class="flex items-center justify-between">
                      <div class="w-full">
                        <p class="text-lg font-semibold"><%= pengajuan.nama_lengkap %> (<%= pengajuan.nim %>)</p>
                        <p class="text-gray-600 mb-2"><%= pengajuan.dataPengajuan %></p>
                        <% if (pengajuan.Approvals && pengajuan.Approvals.length > 0) { %>
                          <div class="flex items-center justify-between bg-gray-100 p-4 rounded-md mb-2 ">
                            <div>
                              <p class="text-sm text-gray-600">Status Kaprodi: <span class="font-semibold <%= pengajuan.Approvals[0].statusApprovalKaprodi === 'Disetujui' ? 'text-green-600' : (pengajuan.Approvals[0].statusApprovalKaprodi === 'Ditolak' ? 'text-red-600' : 'text-yellow-600') %>"><%= pengajuan.Approvals[0].statusApprovalKaprodi %></span></p>
                              <p class="text-sm text-gray-600">Status Wadek: <span class="font-semibold <%= pengajuan.Approvals[0].statusApprovalWadek === 'Disetujui' ? 'text-green-600' : (pengajuan.Approvals[0].statusApprovalWadek === 'Ditolak' ? 'text-red-600' : 'text-yellow-600') %>"><%= pengajuan.Approvals[0].statusApprovalWadek %></span></p>
